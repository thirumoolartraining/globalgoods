{
  "version": 2,
  "builds": [
    {
      "src": "dist/server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.(?:ico|png|jpg|jpeg|svg|css|js|json|txt|webmanifest|xml))",
      "dest": "/dist/public/$1"
    },
    {
      "src": "/api/(?<path>.*)",
      "dest": "/dist/server/index.js"
    },
    {
      "src": "^/(?!_next|static|images|api).*",
      "dest": "/dist/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/server/index.js"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/dist/public/index.html"
    }
  ]
}
